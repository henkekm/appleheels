
Appleheels.Preloader = function (game) {

	this.background = null;
	this.preloadBar = null;

	this.ready = false;

};

Appleheels.Preloader.prototype = {

	preload: function () {

		this.preloadBar = this.add.sprite(0, 100, 'preloaderBar');

		this.load.setPreloadSprite(this.preloadBar);

		this.load.image('player', "<%= asset_path 'player.png' %>");
		this.load.image('enemy', "<%= asset_path 'enemy.png' %>");
		this.load.image('coin', "<%= asset_path 'coin.png' %>");
		this.load.image('wall', "<%= asset_path 'wall.png' %>");
		this.load.image('terminal', "<%= asset_path 'terminal.png' %>");
		this.load.image('pauseButton', "<%= asset_path 'terminal.png' %>");

		this.load.bitmapFont('rollingThunder', "<%= asset_path 'rolling-thunder.png' %>", "<%= asset_path 'rolling-thunder.xml' %>");

	},

	create: function () {

		this.preloadBar.cropEnabled = false;

		this.state.start('MainMenu');

	},

	update: function () {

